<% layout('layout/boilerplate') %>



<h1>ALL CAMPINN</h1>
<div>
  <a href="/campinns/new">Add campinn</a>
</div>
<ul>
  <% for (let campinn of campinns ) {%>
  <div class="card" mb-3>
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" src="<%= campinn.image%>" alt="">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campinn.title %></h5>
          <p class="card-text"><%= campinn.description %></p>
          <p class="card-text">
            <small class="text-muted">
              <%= campinn.location %>
            </small>
          </p>
          <a class="btn btn-primary" href="/campinns/<%= campinn._id %>">view <%= campinn.title %></a>

        </div>
      </div>

    </div>

  </div>
  <!-- <li> <a href="/campinns/<%=campinn._id%>"><%= campinn.title %></a>  </li> -->

  <% } %>

</ul>
